# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  id: ID!
  name: String!
  email: String!
  todos: [Todo!]!
}

type Todo {
  id: ID!
  content: String!
  user: User
}

type Query {
  users(count: Int = 10): [User!]!
  todos(count: Int = 10): [Todo!]!
}

input NewTodo {
  content: String!
  userId: Int!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
